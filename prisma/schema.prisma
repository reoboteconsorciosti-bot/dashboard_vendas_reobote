datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

// Note: This model checks out with the production DB to avoid data loss.
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  passwordHash  String
  role          String    @default("USER")
  teamId        String?
  photoUrl      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}



model Sale {
  id              String   @id @default(uuid())
  consultorNome   String
  administradora  String
  valorLiquido    Decimal  @db.Decimal(15, 2)
  valorBruto      Decimal  @db.Decimal(15, 2)
  dataVenda       DateTime
  mesCompetencia  String
  cota            String   @default("LEGADO")
  grupo           String   @default("LEGADO")
  createdAt       DateTime @default(now())

  @@index([consultorNome])
  @@index([mesCompetencia])
  @@index([dataVenda])
  // Removido @@unique para permitir multiplos registros LEGADO
  @@index([administradora, grupo, cota]) 
}
